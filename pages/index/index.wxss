.fenlei-title{
  margin: 5px;
  border-left:2px solid #1AAD19;
  }

  .list{
    width: 96%;
    margin: 0 auto;
    display: flex;
    flex-direction: row;
    justify-content: center;
    flex-wrap: wrap;
  }
  .list-item{
    width: 200rpx;
    height: 350rpx;
    margin: 0 auto;
    margin-top: 5px;
  }
  .list-item image{
    width: 200rpx;
    height: 280rpx;
  }

  .name{
    width: 200rpx;
    height: 65rpx;
    display: -webkit-box;
    word-break: break-all;
    margin-top: -3px;
    font-size: 0.8em;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
    color: #666;
  }
  .fenlei{
    background: #ffffff;
    margin-top: 10px;
    margin-bottom: 10px;
  }